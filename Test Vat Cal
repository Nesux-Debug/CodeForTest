def main():
    amounts = []
    for i in range(1, 8):
        while True:
            try:
                amount = float(input(f"Enter amount of day {i} : "))
                if amount > 1000000:
                    print("Amount must not exceed 1,000,000. Try again.")
                    continue
                amounts.append(amount)
                break
            except ValueError:
                print("Invalid input. Please enter a number.")

    print("\n========== Report Sale of Fitn Shop ==========")
    print(" day |  Amounts   |   Vat(7%)   |     Sales   |")
    print("-----------------------------------------------")

    total_amount = sum(amounts)
    total_vat = 0
    total_sales = 0

    for i, amt in enumerate(amounts, 1):
        vat = amt * 0.07
        sale = amt - vat
        total_vat += vat
        total_sales += sale
        print(f"  {i}  | {amt:>10,.2f} | {vat:>10,.2f} | {sale:>10,.2f} |")

    print("-----------------------------------------------")
    print(f"Total|{total_amount:>11,.2f}|{total_vat:>12,.2f}|{total_sales:>12,.2f}|")
    print("-----------------------------------------------")
    print(f"Maximum Amount : {max(amounts):,.2f}")
    print(f"Minimum Amount : {min(amounts):,.2f}")

if __name__ == "__main__":
    main()
